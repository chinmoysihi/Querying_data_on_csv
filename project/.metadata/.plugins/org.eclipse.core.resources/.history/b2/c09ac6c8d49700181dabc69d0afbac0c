		 Reader in = new FileReader( csvFileInput );
	        CSVParser parser = new CSVParser( in, CSVFormat.DEFAULT );
	        List<CSVRecord> list = parser.getRecords();

	        for( CSVRecord row : list )
	            for( String entry : row )
	                System.out.println( entry );
    }
